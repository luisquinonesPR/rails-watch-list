<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://pngimg.com/uploads/popcorn/small/popcorn_PNG14.png" %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "My list", "/", class: "nav-link" %>
      </li>
      <li class="nav-item">
         <%= link_to "New list", new_list_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="container lists">
    <h1><%= @list.name %></h1>
  <div class="d-flex justify-content-between my-4">
    <div>
      <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn form-actions' %>
    </div>
  </div>
  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4">
        <div class="bg-white rounded shadow">
          <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img rounded-top'%>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= movie.title %> <%= movie.rating %></span></strong>
            <p><%= movie.overview %></p>
             <%= link_to "delete", bookmark_path(bookmark), method: :delete, class: "card-remove-link", data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
